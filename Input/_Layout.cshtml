@{
    var title = Model.String("Title");
    var subTitle = Model.Get<String>("SubTitle", "");
    var isBlog = Model.String("RelativeFilePathBase").StartsWith("blog\\");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@((title == String.Empty) ? "" : title + " - " )Steve Lowe</title>
    <link href="/Styles/main.css" rel="stylesheet" />
    <link type="application/rss+xml" rel="alternate" title="Steve Lowe" href="/feed.rss" />
    <link type="application/atom+xml" rel="alternate" title="Steve Lowe" href="/feed.atom" />
</head>
<body>
    <nav class="header">
        <div>
            <a href="/">Steve Lowe</a>
        </div>
    </nav>

    <main>
        <div class="container @(Model.String("RelativeFilePathBase").Split(System.IO.Path.DirectorySeparatorChar)[0])">
        @if (isBlog)
        {
            <header>
                <h1>@title</h1>
                @if (!String.IsNullOrEmpty(subTitle))
                {
                    <h2>@subTitle</h2>
                }
                @{DateTime postedOn = Model.Get<DateTime>("Published");}
                <h4 class="postedOn">Posted on @(postedOn.ToString("ddd dd MMMM yyyy"))</h4>
                <hr>
            </header>

            <article>
                @RenderBody()
            </article>
        }
        else
        {
            @RenderBody()
        }
        </div>
    </main>

    <footer>
        <div class="container">
            <div class="right">
                <a href="http://wyam.io/" target="_blank">Generated by Wyam</a>
            </div>
            <a href="/blog/feed.rss" class="link feed">RSS Feed</a> |
            <a href="/blog/feed.atom" class="link feed">Atom Feed</a> |
            <a href='https://cloud.feedly.com/#subscription/feed/http://www.stevelowe.eu/blog/feed.atom' target='blank'>
                <img id='feedlyFollow' src='http://s3.feedly.com/img/follows/feedly-follow-rectangle-volume-small_2x.png' alt='follow me in feedly' width='66' height='20'>
            </a>
            <br>
            <a href="https://github.com/SteveLowe" class="link github" target="_blank">Find me on GitHub</a>

            <div class="clear"></div>
        </div>
    </footer>
</body>
</html>
